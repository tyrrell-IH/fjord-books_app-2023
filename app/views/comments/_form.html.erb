<%= form_with( model: [@commentable, @comment] ) do |form| %>
  <div>
    <%= form.label t('views.common.new', name: Comment.model_name.human), style: "display: block" %>
    <%= form.text_area :body, required: true %>
    <%= form.hidden_field :commentable_type, :value => @commentable.model_name.name %>
    <%= form.hidden_field :commentable_id, :value => @commentable.id %>
    <%= form.hidden_field :user_id, :value => current_user.id %>

  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
