<div id="<%= dom_id book %>">
  <p>
    <strong><%= t("book.Title") %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t("book.Memo") %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t("book.Author") %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t("book.Picture") %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
