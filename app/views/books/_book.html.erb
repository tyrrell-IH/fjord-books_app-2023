<div id="<%= dom_id book %>">
  <p>
    <strong><%= Book.human_attribute_name("book.title") %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= Book.human_attribute_name("book.memo") %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= Book.human_attribute_name("book.author") %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= Book.human_attribute_name("book.picture") %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
